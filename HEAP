// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
class heap{
    public:
    int size;
    int arr[100];
    heap()
    {
        arr[0]=-1;
        size=0;
    }
    void insertion(int val){
        size++;
        int idx=size;
        arr[idx]=val;
        while(idx>1){
            int parent=idx/2;
            if(arr[parent]<arr[idx]){
                swap(arr[parent],arr[idx]);
            }else{
                return;
            }
        }
    }
    void print(){
    for(int i=1;i<=size;i++){
        cout<< arr[i]<<" " ;
    }cout<<endl;
}
};

int main() {
   heap h;
   h.insertion(50);
   h.insertion(55);
   h.insertion(53);
   h.insertion(52);
   h.insertion(54);
   h.print();

    return 0;
}
